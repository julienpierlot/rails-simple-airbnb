<%= image_tag @flat.picture_url, class: 'banner' if @flat.picture_url.present? %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="flat-info">
        <h1><%= @flat.name %></h1>
        <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-primary mt-3 mb-3' %>
        <p>Address: <%= @flat.address %></p>
        <p>Details: </p>
        <p><%= @flat.description %></p>
        <span>Guests: <%= @flat.number_of_guests %></span>
        <span>Price<%= @flat.price_per_night %> euros</span>
      </div>
      <%= link_to 'Back to flats', flats_path, class: 'btn btn-secondary mt-3'%>
    </div>
  </div>
</div>
